<div style="margin-bottom: 5px;">
  <% if current_user %>
    <%= form_with url: search_rooms_path, method: :post, data: { controller: 'debounce' }, id: "room_search_form" do |form| %>
      <%= form.search_field :name_search, value: params[:name_search], class: "room_search_field", placeholder: "Search Rooms to Join...", data: { action: "input->debounce#search" } %>
    <% end %>                                                                                                                              <%# oninput: "this.form.requestSubmit() %>

    <div id="search_results">
      <%= render 'rooms/search_results', rooms: @rooms %>
    </div>
  <% end %>
</div>