<h2 class="center add_top_padding">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field col add_bottom_padding">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-sm' %>
  </div>

  <div class="field col add_bottom_padding">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control form-control-sm' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field col add_bottom_padding">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-sm' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field col add_bottom_padding">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-sm' %>
  </div>

  <div class="field col add_bottom_padding">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control form-control-sm' %>
  </div>

  <div class="field col add_bottom_padding">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>

  <%# Show avatar if have one, if not show default avatar %>
  <div class="field col add_bottom_padding">
    <% if resource.avatar.attached? %>
      <%= image_tag(resource.avatar_thumbnail) %>
    <% else %>
      <%= image_tag('assets/images/default_avatar.png', style: 'width: 50px; height: 50px;') %>
    <% end %>
  </div>

  <div class="actions", style="padding: 0px 0px 30px 10px;">
    <%= f.submit "Update", class: 'btn btn-primary' %>
    <%= link_to "Back", :back, class: 'btn btn-secondary' %>
  </div>
<% end %>

<div class="row", style="padding: 20px 0px 15px 30px;">
  <div class="col-sm-6", style=" background-color: gray;">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Cancel my account</h5>
        <p>Are you sure?</p>
        <p class="lead"><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></p>
      </div>
    </div>
  </div>
</div>

