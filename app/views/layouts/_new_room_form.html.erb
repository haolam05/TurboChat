<% if current_user.admin? %>
  <div style="margin-top: 5px">
    <%= form_with(model: @room, remote: true, class: "d-flex", data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset"}) do |f| %>
      <%= f.text_field :name, class: "form-control", autocomplete: 'off', placeholder:"Admins Only", style: 'margin: 5px;' %>
      <%= f.submit data: { disable_with: false }, class: "btn btn-primary", value: "New Room", style: "margin-bottom: 3px" %>
    <% end %>
  </div>
<% end %>